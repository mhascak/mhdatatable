{
  "name": "@fibit/datagrid-vue3",
  "version": "4.0.0",
  "description": "Modern Vue 3 DataTable component with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "locale",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "type-check": "vue-tsc --noEmit",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "keywords": [
    "vue3",
    "datatable",
    "table",
    "typescript",
    "virtual-scrolling",
    "sorting",
    "filtering",
    "pagination"
  ],
  "author": {
    "name": "Martin Haščák",
    "email": "martinhascak@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Klainer/vue2-datatable.git"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "sortablejs": "^1.15.2",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/sortablejs": "^1.15.5",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.0",
    "jest": "^29.7.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
